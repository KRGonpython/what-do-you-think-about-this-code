import random as r

x = 0

while x < 1:

    num = input('type number for an upper bound: ')

    if num.isdigit() == True:
        print("let's play!")
        num = int(num)
        secret = r.randint(1,num)

        guess = None
        count = 1

        while guess != secret:

            guess = input('Please write a number between 1 and ' + str(num) + ": ")

            if guess.isdigit():
                guess = int(guess)

            if guess == secret:
                print('You got it!')
            else:
                print('Please try again!')
                count += 1

        if count == 1:
            print('It took you only', count, 'guess to find the answer!')

        else:
            print('It took you', count, 'guesses!')
            


    else:
        print('Invalid input! Try Again!')
